<%= form_with url: send_command_path, method: :post do |form|%>
  <%= form.hidden_field :plc_id, value: @plc.id %>
  <%= form.label :port_id, "Port:" %>
  <%= form.collection_select :port_id, @ports.each { |port| port.description }, :id, :description, :prompt => "Select a Port"%>
  <%= form.radio_button :modbus_command, "1" %>
  <%= form.label :modbus_command, "On" %>
  <%= form.radio_button :modbus_command, "0" %>
  <%= form.label :modbus_command, "Off" %>
  <%= form.submit "Submit" %>
<% end %>